# ============================================
# Meta WhatsApp API Configuration
# ============================================
# Get these from: https://developers.facebook.com/apps/YOUR_APP_ID/whatsapp-business/wa-settings/
WHATSAPP_TOKEN=your_whatsapp_business_account_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
VERIFY_TOKEN=your_custom_verify_token
APP_ID=your_app_id
APP_SECRET=your_app_secret

# ============================================
# Google Sheets Configuration (Optional)
# ============================================
# Get these from Google Cloud Console service account JSON file
GOOGLE_SHEET_ID=your_google_sheet_id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----

# ============================================
# Server Configuration
# ============================================
PORT=3000

# ============================================
# Testing Mode
# ============================================
# Set to 'true' to authorize all users (testing)
# Set to 'false' to check Google Sheets for authorization (production)
TESTING_MODE=true
